<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/retina_splash_1499914428"
    android:gravity="center"
    tools:context="com.example.dell.quarter.view.activity.LoginMainActivity">
   <ImageView
       android:layout_width="50dp"
       android:layout_height="50dp"
       android:id="@+id/weixinimg"
       android:layout_marginLeft="40dp"
       android:src="@mipmap/raw_1500022698" />
    <ImageView
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:id="@+id/qqimg"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="20dp"
        android:src="@mipmap/raw_1500022714"
        android:layout_below="@+id/weixinimg" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:id="@+id/logintv"
        android:layout_marginTop="20dp"
        android:text="其它方式登录"
        android:layout_below="@+id/qqimg"
       />
</RelativeLayout>
